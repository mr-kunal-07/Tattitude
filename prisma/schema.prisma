generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        String   @id @default(cuid())
    email     String   @unique
    password  String
    name      String?
    role      String   @default("ADMIN") // "ADMIN" or "USER"
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Booking {
    id            Int           @id @default(autoincrement())
    service       String
    artist        String
    date          DateTime
    time          String
    design        String?
    totalAmount   Float
    depositAmount Float
    status        BookingStatus @default(PENDING)
    createdAt     DateTime      @default(now())
    updatedAt     DateTime      @updatedAt
    phone         String?
}

enum BookingStatus {
    PENDING
    VIEWED
}
